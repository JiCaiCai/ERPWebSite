<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="loginForm"
			type="com.erp.struts.forms.LoginForm">
		</form-bean>
	</form-beans>
	<global-forwards>
		<forward name="Home" path="/JSP/Home.jsp" />
	</global-forwards>

	<action-mappings>
		<action path="/Home" forward="/JSP/Home.jsp" />
		<action path="/login" name="loginForm" scope="request"
			type="com.erp.struts.actions.LoginAction" input="/JSP/Login.jsp">
		</action>

		<action path="/logout" parameter="method" scope="request"
			type="com.erp.struts.actions.LogoutAction">
		</action>
	</action-mappings>
</struts-config>

