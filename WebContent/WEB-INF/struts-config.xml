<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="loginForm"
			type="com.erp.struts.forms.LoginForm">
		</form-bean>
	</form-beans>
	<global-forwards>
		<forward name="home" path="/JSP/Home.jsp"/>
	</global-forwards>
	<action-mappings>
		<action path="/home" forward="/JSP/Home.jsp"/>
		<action path="/login" name="loginForm" scope="request"
			type="com.erp.struts.actions.LoginAction">
		</action>
		<action path="/logout" scope="request"
			type="com.erp.struts.actions.LogoutAction">
		</action>
		<action path="/ajax"  parameter="method" scope="request"
			type="com.erp.struts.actions.AjaxAction">
		</action>
		<action path="/stock"  parameter="method" scope="request"
			type="com.erp.struts.actions.StockAction">
		</action>
	</action-mappings>
</struts-config>

